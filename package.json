{
  "name": "svgo",
  "private": true,
  "version": "1.2.0",
  "displayName": "svgo",
  "description": "Minify SVG with SVGO",
  "publisher": "1000ch",
  "author": "1000ch",
  "categories": [
    "Formatters"
  ],
  "icon": "img/icon.png",
  "repository": "https://github.com/1000ch/vscode-svgo",
  "homepage": "https://github.com/1000ch/vscode-svgo#readme",
  "bugs": "https://github.com/1000ch/vscode-svgo/issues",
  "license": "MIT",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vscode:prepublish": "npm run build",
    "build": "tsc -p . && terser --output out/extension.js -- out/extension.js"
  },
  "engines": {
    "vscode": "^1.20.0"
  },
  "qna": "https://stackoverflow.com/questions/tagged/vscode+svgo",
  "activationEvents": [
    "onCommand:svgo.minify",
    "onCommand:svgo.minify-all",
    "onCommand:svgo.prettify",
    "onCommand:svgo.prettify-all"
  ],
  "main": "out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "svgo configuration options",
      "properties": {
        "svgo.js2svg": {
          "type": "object",
          "default": {
            "indent": 2
          },
          "description": "js2svg config which will be passed to SVGO"
        },
        "svgo.svg2js": {
          "type": "object",
          "default": {},
          "description": "svg2js config which will be passed to SVGO"
        },
        "svgo.plugins": {
          "type": "array",
          "default": [
            {
              "removeTitle": false
            },
            {
              "removeViewBox": false
            }
          ],
          "description": "Plugins config which will be passed to SVGO"
        }
      }
    },
    "commands": [
      {
        "command": "svgo.minify",
        "title": "Minify current SVG file"
      },
      {
        "command": "svgo.minify-all",
        "title": "Minify SVG files in workspace"
      },
      {
        "command": "svgo.prettify",
        "title": "Prettify current SVG file"
      },
      {
        "command": "svgo.prettify-all",
        "title": "Prettify SVG files in workspace"
      }
    ]
  },
  "dependencies": {
    "lodash.merge": "^4.6.1",
    "svgo": "^1.1.1",
    "vscode-set-text": "^1.0.0"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.4",
    "@types/svgo": "^1.0.1",
    "terser": "^4.0.0",
    "typescript": "^3.3.1",
    "vscode": "^1.1.29"
  }
}
